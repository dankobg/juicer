{
	"name": "web",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"build-dev": "vite build --mode development",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "pnpm run test:unit -- --run && pnpm run test:e2e",
		"test:e2e": "playwright test",
		"bufgen": "buf generate ../proto/juicer",
		"openapigen": "pnpm dlx @openapitools/openapi-generator-cli generate -g typescript-fetch -c ./openapi_config.json -i ../api/schema/juicer.yaml -o ./src/lib/gen/juicer_openapi",
		"gen": "pnpm bufgen && pnpm openapigen"
	},
	"dependencies": {
		"@dankop/juicer-board": "^1.8.0",
		"@ory/client-fetch": "^1.20.11",
		"@tanstack/table-core": "^8.21.3",
		"just-safe-set": "^4.2.1",
		"runed": "^0.29.1"
	},
	"devDependencies": {
		"@bufbuild/buf": "^1.55.1",
		"@bufbuild/protobuf": "^2.5.2",
		"@bufbuild/protoc-gen-es": "^2.5.2",
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.29.0",
		"@internationalized/date": "^3.8.1",
		"@lucide/svelte": "^0.515.0",
		"@playwright/test": "^1.53.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.22.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.11",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^24.0.4",
		"bits-ui": "^2.8.10",
		"clsx": "^2.1.1",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.10.1",
		"formsnap": "^2.0.1",
		"globals": "^16.2.0",
		"jsdom": "^26.1.0",
		"layerchart": "2.0.0-next.27",
		"mode-watcher": "^1.0.8",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.13",
		"svelte": "^5.34.8",
		"svelte-check": "^4.2.2",
		"svelte-sonner": "^1.0.5",
		"sveltekit-superforms": "^2.27.0",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.1.11",
		"tw-animate-css": "^1.3.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.0",
		"valibot": "1.1.0",
		"vaul-svelte": "1.0.0-next.7",
		"vite": "^7.0.0",
		"vitest": "^3.2.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
